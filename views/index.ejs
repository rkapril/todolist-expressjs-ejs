<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To Do List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div
      class="container rounded-3 border border-2 border-dark my-5 bg-white"
      style="height: auto"
    >
      <div>
        <h1 class="h1">To Do List</h1>
        <form action="/add" method="POST">
          <div class="row">
            <div class="col-8">
              <input
                class="py-3 form-control shadow"
                placeholder="input your task"
                type="text"
                name="task"
              />
            </div>
            <div class="col-2">
              <input class="mt-2 btn btn-dark" type="submit" value="Add" />
            </div>
          </div>
        </form>
      </div>
      <hr />
      <div class="row rounded bg-white">
        <div class="col-12">
          <ul class="list-group" id="list">
            <% if (taskList.length > 0) { %> 
              <% taskList.forEach((task, index) => { %>
                <li class="my-3 py-3 shadow list-group-item d-flex justify-content-between">
                  <!-- Display task content as text -->
                  <%= task %>       
                  <!-- Delete Form -->
                  <form action="/delete/<%= index %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                  </form>
                </li>
              <% }); %>
            <% } else { %>
              <li class="my-3 py-3 shadow list-group-item">No tasks yet.</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
